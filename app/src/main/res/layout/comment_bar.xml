<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:ik="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/commentBarLayout">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:outlineProvider="background"
        ik:cardCornerRadius="8dp"
        ik:cardUseCompatPadding="true"
        ik:cardPreventCornerOverlap="false"
        android:layout_marginLeft="6dp">
    <LinearLayout
        android:id="@+id/commentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:src="@drawable/comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="评论" />
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/commentCountLayout"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="30dp"
            android:paddingTop="13dp"
            android:src="@drawable/comment2" />

        <TextView
            android:id="@+id/commentCount_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="99" />

    </LinearLayout>

    <ImageView
        android:id="@+id/collect"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:src="@drawable/save0" />

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:src="@drawable/share" />


</LinearLayout>