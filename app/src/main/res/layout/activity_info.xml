<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jbshape"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context="com.invok.newsapi.MeActivity">

    <include layout="@layout/app_title"></include>

    <com.invok.newsapi.view.CircleImageView
        android:id="@+id/header_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:src="@drawable/header128" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="getImageFromAlbum"
        android:text="上传头像" />

    <TextView
        android:id="@+id/path_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片路径："
        android:visibility="gone"/>

    <Button
        android:onClick="save"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存修改"/>

</LinearLayout>
